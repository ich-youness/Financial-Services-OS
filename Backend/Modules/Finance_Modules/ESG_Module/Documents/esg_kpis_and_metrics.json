{
  "esg_kpis_and_metrics": {
    "environmental_metrics": {
      "climate_change": {
        "ghg_emissions": {
          "scope_1": {
            "unit": "tCO2e",
            "calculation_method": "GHG Protocol",
            "data_source": "Energy consumption data, fuel records",
            "reporting_frequency": "Quarterly",
            "owner": "Sustainability Team",
            "targets": {
              "2025": "Reduce by 30% from 2020 baseline",
              "2030": "Reduce by 50% from 2020 baseline",
              "2050": "Net zero"
            }
          },
          "scope_2": {
            "unit": "tCO2e",
            "calculation_method": "GHG Protocol (market-based)",
            "data_source": "Electricity consumption, renewable energy certificates",
            "reporting_frequency": "Quarterly",
            "owner": "Sustainability Team",
            "targets": {
              "2025": "Reduce by 40% from 2020 baseline",
              "2030": "Reduce by 70% from 2020 baseline",
              "2035": "100% renewable energy"
            }
          },
          "scope_3": {
            "unit": "tCO2e",
            "calculation_method": "GHG Protocol",
            "data_source": "Supplier data, travel records, waste data",
            "reporting_frequency": "Annually",
            "owner": "Procurement Team",
            "targets": {
              "2025": "Reduce by 20% from 2020 baseline",
              "2030": "Reduce by 40% from 2020 baseline"
            }
          }
        },
        "energy_consumption": {
          "total_energy": {
            "unit": "MWh",
            "data_source": "Utility bills, energy management systems",
            "reporting_frequency": "Monthly",
            "owner": "Facilities Team"
          },
          "renewable_energy": {
            "unit": "MWh",
            "data_source": "Renewable energy certificates, on-site generation",
            "reporting_frequency": "Monthly",
            "owner": "Facilities Team",
            "targets": {
              "2025": "50% renewable energy",
              "2030": "80% renewable energy",
              "2035": "100% renewable energy"
            }
          },
          "energy_intensity": {
            "unit": "MWh per million revenue",
            "calculation_method": "Total energy / Revenue",
            "reporting_frequency": "Quarterly",
            "owner": "Sustainability Team"
          }
        },
        "climate_risk": {
          "physical_risk_assessment": {
            "unit": "Risk score (1-5)",
            "data_source": "Climate models, historical data",
            "reporting_frequency": "Annually",
            "owner": "Risk Management Team"
          },
          "transition_risk_assessment": {
            "unit": "Risk score (1-5)",
            "data_source": "Policy analysis, market research",
            "reporting_frequency": "Annually",
            "owner": "Strategy Team"
          }
        }
      },
      "resource_management": {
        "water_consumption": {
          "total_water": {
            "unit": "m³",
            "data_source": "Water meters, utility bills",
            "reporting_frequency": "Monthly",
            "owner": "Facilities Team"
          },
          "water_intensity": {
            "unit": "m³ per million revenue",
            "calculation_method": "Total water / Revenue",
            "reporting_frequency": "Quarterly",
            "owner": "Sustainability Team"
          },
          "water_recycling": {
            "unit": "Percentage",
            "calculation_method": "Recycled water / Total water",
            "reporting_frequency": "Quarterly",
            "owner": "Facilities Team"
          }
        },
        "waste_management": {
          "total_waste": {
            "unit": "tonnes",
            "data_source": "Waste collection records",
            "reporting_frequency": "Monthly",
            "owner": "Facilities Team"
          },
          "waste_to_landfill": {
            "unit": "tonnes",
